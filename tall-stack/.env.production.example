# Production Environment Configuration
# Copy this to .env on production server and update with actual values

# Application
APP_NAME=musikfuerfirmen
APP_ENV=production
APP_DEBUG=false
APP_URL=https://musikfuerfirmen.de

# Application Key (Generate with: php artisan key:generate)
APP_KEY=

# Database (Production - MySQL/PostgreSQL recommended)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=musikfuerfirmen_prod
DB_USERNAME=musikfuerfirmen_user
DB_PASSWORD=

# Redis (Optional - for caching and sessions)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Filesystem (Public uploads)
FILESYSTEM_DISK=public

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@musikfuerfirmen.de"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Security
# SESSION_SECURE_COOKIE=true (Uncomment for HTTPS)
# SANCTUM_STATEFUL_DOMAINS=musikfuerfirmen.de (if using API)

# Admin User Credentials
# Email: admin@musikfuerfirmen.de
# Password: admin123 (CHANGE IMMEDIATELY AFTER FIRST LOGIN!)
